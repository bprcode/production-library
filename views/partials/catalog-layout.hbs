    </small>
  </footer>
</body>
</html>

<script>
window.addEventListener('pageshow', event => {
  const offcanvas = document.getElementById('offcanvas-id')
  if (event.persisted) {
    offcanvas.classList.add('skip-transition')
    setTimeout(() => {
      offcanvas.classList.remove('skip-transition')
    }, 200)
  }

  const closeButton = offcanvas.querySelector('.btn-close')
  closeButton.dispatchEvent(new Event('click'))
})

const backButton = document.getElementById('back-button')
if (backButton) {
  backButton.addEventListener('click', () => {
    history.back()
  })
}
</script>
